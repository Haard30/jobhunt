<div class="mb-3" style="margin-top: 5%; overflow: auto;margin-bottom: 20%;">
  <div class="card border-dark" style="height: 50%; width: 50%;align-self: center; align-content: center;margin-left: 25%;" >
    <div class="w3-container w3-padding w3-black">
      <h4>Register</h4>
    </div>
    <div class="card-body" >
      <form class="needs-validation" method="POST" action="/registerUser">
        <label for="lblpartid">Email ID </label>
      <input
        class="form-control"
        name="txtemailid"
        type="email"
        placeholder="Enter your email id"
        required
      />
      <br />
      <label for="lblfname">First Name  </label>
      <input
        class="form-control"
        name="txtfname"
        type="text"
        placeholder="Enter your First Name"
        required
      />

      <br />
      <label for="lbllname">Last Name  </label>
      <input
        class="form-control"
        name="txtlname"
        type="text"
        placeholder="Enter your Last Name"
        required
      />

      <br />
      <label for="lblpassword">Password  </label>
      <input
        class="form-control"
        name="txtpassword"
        type="password"
        placeholder="Enter your Password"
        required
      />

      
      <br />
      <label for="lblq1">Question 1:  </label>
      <input
        class="form-control"
        name="txtquetion1"
        type="text"
        placeholder="Enter security Question 1:"
        required
      />

      
      <br />
      <label for="lbla1">Answer 1:  </label>
      <input
        class="form-control"
        name="txtanswer1"
        type="text"
        placeholder="Enter security Answer 1:"
        required
      />

      
      <br />
      <label for="lblq2">Question 2:  </label>
      <input
        class="form-control"
        name="txtquetion2"
        type="text"
        placeholder="Enter security Question 2:"
        required
      />

      <br />
      <label for="lbla2">Answer 2:  </label>
      <input
        class="form-control"
        name="txtanswer2"
        type="text"
        placeholder="Enter security Answer 2:"
        required
      />

      <br />
      <label for="rtype">Registration Type:</label> <br />
      <select id="rtype" name="rtype" class="form-control">
        <option value="applicant">Applicant</option>
        <option value="employer">Employer</option>
      </select>


        <br />
        <button class="w3-button w3-block w3-padding-large w3-black w3-margin-bottom" type="submit">Register</button>
      </form>

      <br />
      <a href="/">Back to login</a>
    </div>
  </div>
  
 
